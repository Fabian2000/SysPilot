<Page x:Class="SysPilot.Pages.HardwareInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:local="clr-namespace:SysPilot"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="900"
      Background="Transparent"
      Title="{x:Static local:Lang.HardwareTitle}">

    <Page.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="InfoLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#606060"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Width" Value="120"/>
        </Style>

        <Style x:Key="InfoValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="0,0,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="{x:Static local:Lang.HardwareTitle}"
                   Foreground="#E0E0E0"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Margin="0,0,0,8"/>

        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{x:Static local:Lang.HardwareSubtitle}"
                           Foreground="#606060"
                           FontSize="13"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="LoadTimeText"
                           Foreground="#007ACC"
                           FontSize="13"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <Button Grid.Column="1" Style="{StaticResource ActionButton}" Click="Refresh_Click" ToolTip="Refresh">
                <iconPacks:PackIconMaterial Kind="Refresh" Width="14" Height="14"/>
            </Button>
        </Grid>

        <!-- Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Grid>
                <!-- Loading Overlay -->
                <Border x:Name="LoadingPanel" Background="#1A1A1A" Visibility="Collapsed" Panel.ZIndex="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial x:Name="LoadingIcon" Kind="Sync" Width="32" Height="32"
                                                    Foreground="#007ACC" HorizontalAlignment="Center"
                                                    RenderTransformOrigin="0.5,0.5">
                            <iconPacks:PackIconMaterial.RenderTransform>
                                <RotateTransform Angle="0"/>
                            </iconPacks:PackIconMaterial.RenderTransform>
                        </iconPacks:PackIconMaterial>
                        <TextBlock Text="{x:Static local:Lang.ScanningHardware}" Foreground="#808080" Margin="0,12,0,0"/>
                    </StackPanel>
                </Border>

                <Grid x:Name="ContentGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- CPU -->
                    <Border Grid.Row="0" Grid.Column="0" Background="#1E1E1E" CornerRadius="12" Padding="16" Margin="0,0,8,8">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <iconPacks:PackIconMaterial Kind="Chip" Width="18" Height="18" Foreground="#007ACC" VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Static local:Lang.Processor}" Style="{StaticResource SectionHeader}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel x:Name="CpuPanel"/>
                        </StackPanel>
                    </Border>

                    <!-- GPU -->
                    <Border Grid.Row="0" Grid.Column="1" Background="#1E1E1E" CornerRadius="12" Padding="16" Margin="8,0,0,8">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <iconPacks:PackIconMaterial Kind="ExpansionCardVariant" Width="18" Height="18" Foreground="#27AE60" VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Static local:Lang.Graphics}" Style="{StaticResource SectionHeader}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel x:Name="GpuPanel"/>
                        </StackPanel>
                    </Border>

                    <!-- Motherboard -->
                    <Border Grid.Row="1" Grid.Column="0" Background="#1E1E1E" CornerRadius="12" Padding="16" Margin="0,8,8,8">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <iconPacks:PackIconMaterial Kind="ExpansionCard" Width="18" Height="18" Foreground="#9B59B6" VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Static local:Lang.Motherboard}" Style="{StaticResource SectionHeader}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel x:Name="MotherboardPanel"/>
                        </StackPanel>
                    </Border>

                    <!-- BIOS -->
                    <Border Grid.Row="1" Grid.Column="1" Background="#1E1E1E" CornerRadius="12" Padding="16" Margin="8,8,0,8">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <iconPacks:PackIconMaterial Kind="Chip" Width="18" Height="18" Foreground="#E67E22" VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Static local:Lang.BIOS}" Style="{StaticResource SectionHeader}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel x:Name="BiosPanel"/>
                        </StackPanel>
                    </Border>

                    <!-- RAM -->
                    <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Background="#1E1E1E" CornerRadius="12" Padding="16" Margin="0,8,0,8">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <iconPacks:PackIconMaterial Kind="Memory" Width="18" Height="18" Foreground="#3498DB" VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Static local:Lang.MemoryModules}" Style="{StaticResource SectionHeader}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel x:Name="RamPanel"/>
                        </StackPanel>
                    </Border>

                    <!-- Disks -->
                    <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Background="#1E1E1E" CornerRadius="12" Padding="16" Margin="0,8,0,8">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <iconPacks:PackIconMaterial Kind="Harddisk" Width="18" Height="18" Foreground="#1ABC9C" VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Static local:Lang.StorageDevices}" Style="{StaticResource SectionHeader}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel x:Name="DiskPanel"/>
                        </StackPanel>
                    </Border>

                    <!-- Network & Audio -->
                    <Border Grid.Row="4" Grid.Column="0" Background="#1E1E1E" CornerRadius="12" Padding="16" Margin="0,8,8,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <iconPacks:PackIconMaterial Kind="Lan" Width="18" Height="18" Foreground="#E74C3C" VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Static local:Lang.NetworkAdaptersHW}" Style="{StaticResource SectionHeader}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel x:Name="NetworkPanel"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Row="4" Grid.Column="1" Background="#1E1E1E" CornerRadius="12" Padding="16" Margin="8,8,0,0">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <iconPacks:PackIconMaterial Kind="Speaker" Width="18" Height="18" Foreground="#F39C12" VerticalAlignment="Center"/>
                                <TextBlock Text="{x:Static local:Lang.AudioDevices}" Style="{StaticResource SectionHeader}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel x:Name="AudioPanel"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
