<Page x:Class="SysPilot.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="clr-namespace:SysPilot.Controls"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:local="clr-namespace:SysPilot"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="600"
      Background="Transparent"
      Title="{x:Static local:Lang.DashboardTitle}">

    <Page.Resources>
        <Style x:Key="QuickActionButton" TargetType="Button">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#303030"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="0,0,20,20">
            <!-- Header -->
            <TextBlock Text="{x:Static local:Lang.DashboardTitle}"
                       Foreground="#E0E0E0"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Margin="0,0,0,20"/>

            <!-- Gauges Row -->
            <Border Background="#1E1E1E" CornerRadius="12" Padding="20" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="{x:Static local:Lang.SystemStatus}"
                               Foreground="#808080"
                               FontSize="12"
                               Margin="0,0,0,16"/>

                    <UniformGrid Rows="1" Columns="4">
                        <controls:GaugeControl x:Name="CpuGauge"
                                               Label="{x:Static local:Lang.CPU}"
                                               GaugeColor="#007ACC"
                                               HorizontalAlignment="Center"/>
                        <controls:GaugeControl x:Name="RamGauge"
                                               Label="{x:Static local:Lang.Memory}"
                                               GaugeColor="#7B68EE"
                                               HorizontalAlignment="Center"/>
                        <controls:GaugeControl x:Name="DiskGauge"
                                               Label="{x:Static local:Lang.Disk}"
                                               GaugeColor="#20B2AA"
                                               HorizontalAlignment="Center"/>
                        <controls:GaugeControl x:Name="NetworkGauge"
                                               Label="{x:Static local:Lang.Network}"
                                               GaugeColor="#FF6347"
                                               HorizontalAlignment="Center"/>
                    </UniformGrid>
                </StackPanel>
            </Border>

            <!-- System Info -->
            <Border Background="#1E1E1E" CornerRadius="12" Padding="20" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="{x:Static local:Lang.SystemInfo}"
                                   Foreground="#808080"
                                   FontSize="12"
                               Margin="0,0,0,12"/>

                        <StackPanel Margin="0,4,0,0">
                            <TextBlock Foreground="#606060" FontSize="11" Text="{x:Static local:Lang.OperatingSystem}"/>
                            <TextBlock x:Name="OsText" Foreground="#E0E0E0" FontSize="13" Margin="0,2,0,8"/>

                            <TextBlock Foreground="#606060" FontSize="11" Text="{x:Static local:Lang.Build}"/>
                            <TextBlock x:Name="BuildText" Foreground="#E0E0E0" FontSize="13" Margin="0,2,0,8"/>

                            <TextBlock Foreground="#606060" FontSize="11" Text="{x:Static local:Lang.ComputerName}"/>
                            <TextBlock x:Name="ComputerNameText" Foreground="#E0E0E0" FontSize="13" Margin="0,2,0,8"/>

                            <TextBlock Foreground="#606060" FontSize="11" Text="{x:Static local:Lang.User}"/>
                            <TextBlock x:Name="UserNameText" Foreground="#E0E0E0" FontSize="13" Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="{x:Static local:Lang.Hardware}"
                                   Foreground="#808080"
                                   FontSize="12"
                                   Margin="0,0,0,12"/>

                        <StackPanel Margin="0,4,0,0">
                            <TextBlock Foreground="#606060" FontSize="11" Text="{x:Static local:Lang.Processor}"/>
                            <TextBlock x:Name="CpuNameText" Foreground="#E0E0E0" FontSize="13" TextTrimming="CharacterEllipsis" Margin="0,2,0,8"/>

                            <TextBlock Foreground="#606060" FontSize="11" Text="{x:Static local:Lang.InstalledRAM}"/>
                            <TextBlock x:Name="RamText" Foreground="#E0E0E0" FontSize="13" Margin="0,2,0,8"/>

                            <TextBlock Foreground="#606060" FontSize="11" Text="{x:Static local:Lang.Uptime}"/>
                            <TextBlock x:Name="UptimeText" Foreground="#E0E0E0" FontSize="13" Margin="0,2,0,8"/>

                            <TextBlock Foreground="#606060" FontSize="11" Text="{x:Static local:Lang.LocalIP}"/>
                            <TextBlock x:Name="LocalIpText" Foreground="#E0E0E0" FontSize="13" Margin="0,2,0,0"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Quick Actions -->
            <Border Background="#1E1E1E" CornerRadius="12" Padding="20">
                <StackPanel>
                    <TextBlock Text="{x:Static local:Lang.QuickActions}"
                               Foreground="#808080"
                               FontSize="12"
                               Margin="0,0,0,16"/>

                    <UniformGrid Rows="1" Columns="4" Margin="0,0,0,0">
                        <Button Style="{StaticResource QuickActionButton}"
                                Margin="0,0,8,0"
                                Click="OpenGodMode_Click">
                            <StackPanel>
                                <iconPacks:PackIconMaterial Kind="Crown"
                                                            Width="24" Height="24"
                                                            Foreground="#808080"
                                                            HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Static local:Lang.GodMode}"
                                           Foreground="#B0B0B0"
                                           FontSize="11"
                                           HorizontalAlignment="Center"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource QuickActionButton}"
                                Margin="4,0,4,0"
                                Click="ToggleDarkMode_Click">
                            <StackPanel>
                                <iconPacks:PackIconMaterial Kind="ThemeLightDark"
                                                            Width="24" Height="24"
                                                            Foreground="#808080"
                                                            HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Static local:Lang.DarkMode}"
                                           Foreground="#B0B0B0"
                                           FontSize="11"
                                           HorizontalAlignment="Center"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource QuickActionButton}"
                                Margin="4,0,4,0"
                                Click="RestartExplorer_Click">
                            <StackPanel>
                                <iconPacks:PackIconMaterial Kind="FolderRefresh"
                                                            Width="24" Height="24"
                                                            Foreground="#808080"
                                                            HorizontalAlignment="Center"/>
                                <TextBlock Text="{x:Static local:Lang.RestartExplorer}"
                                           Foreground="#B0B0B0"
                                           FontSize="11"
                                           HorizontalAlignment="Center"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource QuickActionButton}"
                                Margin="8,0,0,0"
                                Click="RestartAudio_Click">
                            <StackPanel>
                                <Grid HorizontalAlignment="Center">
                                    <iconPacks:PackIconMaterial Kind="VolumeHigh"
                                                                Width="24" Height="24"
                                                                Foreground="#808080"/>
                                    <iconPacks:PackIconMaterial Kind="Shield"
                                                                Width="10" Height="10"
                                                                Foreground="#F0C030"
                                                                HorizontalAlignment="Right"
                                                                VerticalAlignment="Bottom"
                                                                Margin="0,0,-4,0"/>
                                </Grid>
                                <TextBlock Text="{x:Static local:Lang.AudioDriver}"
                                           Foreground="#B0B0B0"
                                           FontSize="11"
                                           HorizontalAlignment="Center"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Button>
                    </UniformGrid>
                </StackPanel>
            </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
