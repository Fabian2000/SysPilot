<Page x:Class="SysPilot.Pages.TaskManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:converters="clr-namespace:SysPilot.Converters"
      xmlns:helpers="clr-namespace:SysPilot.Helpers"
      xmlns:local="clr-namespace:SysPilot"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="600"
      Background="Transparent"
      Title="{x:Static local:Lang.TaskManagerTitle}">

    <Page.Resources>
        <converters:NullToVisibleConverter x:Key="NullToVisibleConverter"/>

        <!-- Custom styled ContextMenu -->
        <Style x:Key="MenuItemStyle" TargetType="MenuItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}" CornerRadius="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Grid.Column="0" ContentSource="Icon" VerticalAlignment="Center"/>
                                <ContentPresenter Grid.Column="1" ContentSource="Header" VerticalAlignment="Center" Margin="8,0,0,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CustomContextMenuStyle" TargetType="ContextMenu">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ContextMenu">
                        <Border Background="#252525" CornerRadius="8" Padding="4"
                                BorderBrush="#3A3A3A" BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="16" ShadowDepth="2" Opacity="0.4"/>
                            </Border.Effect>
                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ContextMenu x:Key="ProcessContextMenu" Style="{StaticResource CustomContextMenuStyle}">
            <ContextMenu.Resources>
                <Style TargetType="MenuItem" BasedOn="{StaticResource MenuItemStyle}"/>
            </ContextMenu.Resources>
            <MenuItem Header="{x:Static local:Lang.Details}" Click="ShowDetails_Click">
                <MenuItem.Icon>
                    <iconPacks:PackIconMaterial Kind="InformationOutline" Width="14" Height="14" Foreground="#808080"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="{x:Static local:Lang.OpenFileLocation}" Click="OpenFileLocation_Click">
                <MenuItem.Icon>
                    <iconPacks:PackIconMaterial Kind="FolderOpenOutline" Width="14" Height="14" Foreground="#808080"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Header="{x:Static local:Lang.CopyPath}" Click="CopyPath_Click">
                <MenuItem.Icon>
                    <iconPacks:PackIconMaterial Kind="ContentCopy" Width="14" Height="14" Foreground="#808080"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator Background="#3A3A3A" Margin="4,4"/>
            <MenuItem Header="{x:Static local:Lang.EndTask}" Click="ContextEndTask_Click" Foreground="#FF6B6B">
                <MenuItem.Icon>
                    <iconPacks:PackIconMaterial Kind="Close" Width="14" Height="14" Foreground="#FF6B6B"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#4A2020"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#6A3030"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataTemplate for Group Headers -->
        <DataTemplate x:Key="GroupHeaderTemplate" DataType="{x:Type helpers:ProcessHelper+GroupHeader}">
            <Button Click="GroupHeader_Click" Tag="{Binding}" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#1A1A1A" Padding="12,8">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="ChevronDown" Width="12" Height="12"
                                                Foreground="#606060" Margin="0,2,8,0"
                                                x:Name="ExpanderIcon"/>
                    <TextBlock Text="{Binding Name}" Foreground="#007ACC" FontWeight="SemiBold" FontSize="13"/>
                    <TextBlock Text="{Binding Count, StringFormat=' ({0})'}" Foreground="#606060" FontSize="12"/>
                </StackPanel>
            </Button>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsCollapsed}" Value="True">
                    <Setter TargetName="ExpanderIcon" Property="Kind" Value="ChevronRight"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- DataTemplate for Process Items -->
        <DataTemplate x:Key="ProcessItemTemplate" DataType="{x:Type helpers:ProcessHelper+ProcessInfo}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="*" MinWidth="120"/>
                    <ColumnDefinition Width="55"/>
                    <ColumnDefinition Width="75"/>
                    <ColumnDefinition Width="75"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Width="24">
                    <Image Source="{Binding Icon}" Width="16" Height="16"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           RenderOptions.BitmapScalingMode="HighQuality"/>
                    <iconPacks:PackIconMaterial Kind="Application" Width="16" Height="16"
                                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                                Foreground="#606060"
                                                Visibility="{Binding Icon, Converter={StaticResource NullToVisibleConverter}}"/>
                </Grid>
                <TextBlock Grid.Column="1" Text="{Binding Name}" Foreground="#E0E0E0" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                <TextBlock Grid.Column="2" Text="{Binding CpuFormatted}" Foreground="#B0B0B0" VerticalAlignment="Center" TextAlignment="Right" Margin="0,0,8,0"/>
                <TextBlock Grid.Column="3" Text="{Binding MemoryFormatted}" Foreground="#B0B0B0" VerticalAlignment="Center" TextAlignment="Right" Margin="0,0,8,0"/>
                <TextBlock Grid.Column="4" Text="{Binding DiskFormatted}" Foreground="#B0B0B0" VerticalAlignment="Center" TextAlignment="Right" Margin="0,0,8,0"/>
            </Grid>
        </DataTemplate>

        <!-- Template Selector Style -->
        <Style x:Key="ListItemContainerStyle" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" Padding="12,6">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <DataTrigger Binding="{Binding IsHeader}" Value="True">
                                <Setter TargetName="Bd" Property="Padding" Value="0"/>
                                <Setter Property="Focusable" Value="False"/>
                            </DataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsHeader}" Value="False"/>
                                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsSelected}" Value="True"/>
                                </MultiDataTrigger.Conditions>
                                <Setter TargetName="Bd" Property="Background" Value="#2A2A2A"/>
                            </MultiDataTrigger>
                            <MultiDataTrigger>
                                <MultiDataTrigger.Conditions>
                                    <Condition Binding="{Binding IsHeader}" Value="False"/>
                                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=IsMouseOver}" Value="True"/>
                                </MultiDataTrigger.Conditions>
                                <Setter TargetName="Bd" Property="Background" Value="#252525"/>
                            </MultiDataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsHeader}" Value="False">
                    <Setter Property="ContextMenu" Value="{StaticResource ProcessContextMenu}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="0,0,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="{x:Static local:Lang.TaskManagerTitle}"
                   Foreground="#E0E0E0"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Margin="0,0,0,20"/>

        <!-- Search and Refresh -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Box with Placeholder -->
            <Border Background="#252525" CornerRadius="6" Padding="12,8">
                <Grid>
                    <TextBlock x:Name="SearchPlaceholder"
                               Text="{x:Static local:Lang.SearchProcesses}"
                               Foreground="#606060"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"/>
                    <TextBox x:Name="SearchBox"
                             Background="Transparent"
                             Foreground="#E0E0E0"
                             BorderThickness="0"
                             CaretBrush="#E0E0E0"
                             FontSize="13"
                             VerticalAlignment="Center"
                             TextChanged="SearchBox_TextChanged"/>
                </Grid>
            </Border>

            <Button Grid.Column="1"
                    Style="{StaticResource ActionButton}"
                    Margin="8,0,0,0"
                    Click="Refresh_Click">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Refresh" Width="14" Height="14" VerticalAlignment="Center"/>
                    <TextBlock Text="{x:Static local:Lang.Refresh}" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>

            <Button x:Name="WindowPickerButton" Grid.Column="2"
                    Style="{StaticResource ActionButton}"
                    Margin="8,0,0,0"
                    ToolTip="Drag to a window to find its process"
                    PreviewMouseLeftButtonDown="WindowPicker_MouseDown"
                    PreviewMouseMove="WindowPicker_MouseMove"
                    PreviewMouseLeftButtonUp="WindowPicker_MouseUp">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial x:Name="WindowPickerIcon" Kind="Crosshairs" Width="14" Height="14" VerticalAlignment="Center"/>
                    <TextBlock Text="{x:Static local:Lang.PickWindow}" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Process List -->
        <Grid Grid.Row="2">
            <!-- Background with rounded corners -->
            <Border Background="#1E1E1E" CornerRadius="12"/>

            <!-- Content overlay with clipping -->
            <Border x:Name="ContentClipBorder" CornerRadius="12" SizeChanged="ContentClipBorder_SizeChanged">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="Transparent" BorderBrush="#303030" BorderThickness="0,0,0,1">
                    <Grid Margin="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="36"/>
                            <ColumnDefinition Width="*" MinWidth="120"/>
                            <ColumnDefinition Width="55"/>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="75"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Background="Transparent" Padding="12,10"/>
                        <Border Grid.Column="1" x:Name="HeaderName" Background="Transparent" Padding="0,10,12,10"
                                Cursor="Hand" MouseLeftButtonUp="SortHeader_MouseUp" Tag="Name">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{x:Static local:Lang.Name}" Foreground="#808080" FontSize="12"/>
                                <iconPacks:PackIconMaterial x:Name="SortIconName" Kind="ChevronDown" Width="10" Height="10"
                                                            Foreground="#808080" Margin="4,2,0,0" Visibility="Collapsed"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="2" x:Name="HeaderCPU" Background="Transparent" Padding="0,10,8,10"
                                Cursor="Hand" MouseLeftButtonUp="SortHeader_MouseUp" Tag="CPU">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="{x:Static local:Lang.CPU}" Foreground="#808080" FontSize="12"/>
                                <iconPacks:PackIconMaterial x:Name="SortIconCPU" Kind="ChevronDown" Width="10" Height="10"
                                                            Foreground="#808080" Margin="4,2,0,0" Visibility="Collapsed"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="3" x:Name="HeaderMemory" Background="Transparent" Padding="0,10,8,10"
                                Cursor="Hand" MouseLeftButtonUp="SortHeader_MouseUp" Tag="Memory">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="{x:Static local:Lang.Memory}" Foreground="#808080" FontSize="12"/>
                                <iconPacks:PackIconMaterial x:Name="SortIconMemory" Kind="ChevronDown" Width="10" Height="10"
                                                            Foreground="#606060" Margin="4,2,0,0" Visibility="Visible"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="4" x:Name="HeaderDisk" Background="Transparent" Padding="0,10,8,10"
                                Cursor="Hand" MouseLeftButtonUp="SortHeader_MouseUp" Tag="Disk">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="{x:Static local:Lang.Disk}" Foreground="#808080" FontSize="12"/>
                                <iconPacks:PackIconMaterial x:Name="SortIconDisk" Kind="ChevronDown" Width="10" Height="10"
                                                            Foreground="#808080" Margin="4,2,0,0" Visibility="Collapsed"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Virtualized Flat List -->
                <ListBox x:Name="ProcessListBox"
                         Grid.Row="1"
                         Background="Transparent"
                         BorderThickness="0"
                         VirtualizingStackPanel.IsVirtualizing="True"
                         VirtualizingStackPanel.VirtualizationMode="Recycling"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         SelectionMode="Extended"
                         ItemContainerStyle="{StaticResource ListItemContainerStyle}"
                         SelectionChanged="ProcessListBox_SelectionChanged">
                    <ListBox.ItemTemplateSelector>
                        <converters:ProcessListTemplateSelector
                            HeaderTemplate="{StaticResource GroupHeaderTemplate}"
                            ProcessTemplate="{StaticResource ProcessItemTemplate}"/>
                    </ListBox.ItemTemplateSelector>
                </ListBox>

                <!-- Loading indicator -->
                <Border x:Name="LoadingPanel" Grid.RowSpan="2" Background="#CC1E1E1E" CornerRadius="12" Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <iconPacks:PackIconMaterial x:Name="LoadingIcon"
                                                    Kind="Sync"
                                                    Width="32" Height="32"
                                                    Foreground="#007ACC"
                                                    HorizontalAlignment="Center"
                                                    RenderTransformOrigin="0.5,0.5">
                            <iconPacks:PackIconMaterial.RenderTransform>
                                <RotateTransform/>
                            </iconPacks:PackIconMaterial.RenderTransform>
                        </iconPacks:PackIconMaterial>
                        <TextBlock Text="{x:Static local:Lang.LoadingProcesses}"
                                   Foreground="#808080"
                                   HorizontalAlignment="Center"
                                   Margin="0,12,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
            </Border>
        </Grid>

        <!-- Actions -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,16,0,0">
            <Button x:Name="EndTaskButton"
                    Style="{StaticResource DangerButton}"
                    IsEnabled="False"
                    Click="EndTask_Click">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Close" Width="14" Height="14" VerticalAlignment="Center"/>
                    <TextBlock Text="{x:Static local:Lang.EndTask}" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource ActionButton}"
                    Margin="8,0,0,0"
                    Click="RunCommand_Click">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Play" Width="14" Height="14" VerticalAlignment="Center"/>
                    <TextBlock Text="{x:Static local:Lang.Run}" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>

            <TextBlock x:Name="ProcessCountText"
                       Foreground="#606060"
                       FontSize="12"
                       VerticalAlignment="Center"
                       Margin="16,0,0,0"/>
        </StackPanel>
    </Grid>
</Page>
