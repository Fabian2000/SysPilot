<Page x:Class="SysPilot.Pages.PowerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:local="clr-namespace:SysPilot"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="600"
      Background="Transparent"
      Title="{x:Static local:Lang.PowerTitle}">

    <Page.Resources>
        <Style x:Key="PowerButton" TargetType="Button">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#303030"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerPowerButton" TargetType="Button" BasedOn="{StaticResource PowerButton}">
            <Setter Property="Background" Value="#3A2020"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A2A2A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ToolButton" TargetType="Button">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="0,0,20,20">
                <!-- Header -->
                <TextBlock Text="{x:Static local:Lang.PowerTitle}"
                           Foreground="#E0E0E0"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Margin="0,0,0,20"/>

                <!-- Power Actions -->
                <Border Background="#1E1E1E" CornerRadius="12" Padding="20" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="{x:Static local:Lang.PowerActions}"
                                   Foreground="#808080"
                                   FontSize="12"
                                   Margin="0,0,0,16"/>

                        <WrapPanel>
                            <Button Style="{StaticResource DangerPowerButton}"
                                    Margin="0,0,12,12"
                                    Click="Shutdown_Click">
                                <StackPanel>
                                    <iconPacks:PackIconMaterial Kind="Power"
                                                                Width="32" Height="32"
                                                                Foreground="#E05050"
                                                                HorizontalAlignment="Center"/>
                                    <TextBlock Text="{x:Static local:Lang.Shutdown}"
                                               Foreground="#E0E0E0"
                                               FontSize="13"
                                               HorizontalAlignment="Center"
                                               Margin="0,12,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource DangerPowerButton}"
                                    Margin="0,0,12,12"
                                    Click="ForceShutdown_Click">
                                <StackPanel>
                                    <Grid>
                                        <iconPacks:PackIconMaterial Kind="Power"
                                                                    Width="32" Height="32"
                                                                    Foreground="#FF3030"
                                                                    HorizontalAlignment="Center"/>
                                        <iconPacks:PackIconMaterial Kind="AlertCircle"
                                                                    Width="14" Height="14"
                                                                    Foreground="#FF3030"
                                                                    HorizontalAlignment="Right"
                                                                    VerticalAlignment="Top"
                                                                    Margin="0,-2,-2,0"/>
                                    </Grid>
                                    <TextBlock Text="{x:Static local:Lang.ForceShutdown}"
                                               Foreground="#E0E0E0"
                                               FontSize="12"
                                               HorizontalAlignment="Center"
                                               Margin="0,12,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource DangerPowerButton}"
                                    Margin="0,0,12,12"
                                    Click="Restart_Click">
                                <StackPanel>
                                    <iconPacks:PackIconMaterial Kind="Restart"
                                                                Width="32" Height="32"
                                                                Foreground="#E07050"
                                                                HorizontalAlignment="Center"/>
                                    <TextBlock Text="{x:Static local:Lang.Restart}"
                                               Foreground="#E0E0E0"
                                               FontSize="13"
                                               HorizontalAlignment="Center"
                                               Margin="0,12,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource DangerPowerButton}"
                                    Margin="0,0,12,12"
                                    Click="ForceRestart_Click">
                                <StackPanel>
                                    <Grid>
                                        <iconPacks:PackIconMaterial Kind="Restart"
                                                                    Width="32" Height="32"
                                                                    Foreground="#FF5030"
                                                                    HorizontalAlignment="Center"/>
                                        <iconPacks:PackIconMaterial Kind="AlertCircle"
                                                                    Width="14" Height="14"
                                                                    Foreground="#FF5030"
                                                                    HorizontalAlignment="Right"
                                                                    VerticalAlignment="Top"
                                                                    Margin="0,-2,-2,0"/>
                                    </Grid>
                                    <TextBlock Text="{x:Static local:Lang.ForceRestart}"
                                               Foreground="#E0E0E0"
                                               FontSize="12"
                                               HorizontalAlignment="Center"
                                               Margin="0,12,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource PowerButton}"
                                    Margin="0,0,12,12"
                                    Click="Sleep_Click">
                                <StackPanel>
                                    <iconPacks:PackIconMaterial Kind="PowerSleep"
                                                                Width="32" Height="32"
                                                                Foreground="#7B68EE"
                                                                HorizontalAlignment="Center"/>
                                    <TextBlock Text="{x:Static local:Lang.Sleep}"
                                               Foreground="#E0E0E0"
                                               FontSize="13"
                                               HorizontalAlignment="Center"
                                               Margin="0,12,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource PowerButton}"
                                    Margin="0,0,12,12"
                                    Click="Hibernate_Click">
                                <StackPanel>
                                    <iconPacks:PackIconMaterial Kind="SnowflakeVariant"
                                                                Width="32" Height="32"
                                                                Foreground="#20B2AA"
                                                                HorizontalAlignment="Center"/>
                                    <TextBlock Text="{x:Static local:Lang.Hibernate}"
                                               Foreground="#E0E0E0"
                                               FontSize="13"
                                               HorizontalAlignment="Center"
                                               Margin="0,12,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource PowerButton}"
                                    Margin="0,0,12,12"
                                    Click="Lock_Click">
                                <StackPanel>
                                    <iconPacks:PackIconMaterial Kind="Lock"
                                                                Width="32" Height="32"
                                                                Foreground="#808080"
                                                                HorizontalAlignment="Center"/>
                                    <TextBlock Text="{x:Static local:Lang.Lock}"
                                               Foreground="#E0E0E0"
                                               FontSize="13"
                                               HorizontalAlignment="Center"
                                               Margin="0,12,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource PowerButton}"
                                    Margin="0,0,12,12"
                                    Click="Logoff_Click">
                                <StackPanel>
                                    <iconPacks:PackIconMaterial Kind="Logout"
                                                                Width="32" Height="32"
                                                                Foreground="#808080"
                                                                HorizontalAlignment="Center"/>
                                    <TextBlock Text="{x:Static local:Lang.LogOff}"
                                               Foreground="#E0E0E0"
                                               FontSize="13"
                                               HorizontalAlignment="Center"
                                               Margin="0,12,0,0"/>
                                </StackPanel>
                            </Button>
                        </WrapPanel>
                    </StackPanel>
                </Border>

                <!-- System Tools -->
                <Border Background="#1E1E1E" CornerRadius="12" Padding="20">
                    <StackPanel>
                        <TextBlock Text="{x:Static local:Lang.SystemTools}"
                                   Foreground="#808080"
                                   FontSize="12"
                                   Margin="0,0,0,16"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Button Grid.Row="0" Grid.Column="0"
                                    Style="{StaticResource ToolButton}"
                                    Click="OpenTool_Click"
                                    Tag="msconfig">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="CogOutline"
                                                                Width="20" Height="20"
                                                                Foreground="#808080"
                                                                VerticalAlignment="Center"/>
                                    <TextBlock Text="{x:Static local:Lang.SystemConfiguration}"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="0" Grid.Column="2"
                                    Style="{StaticResource ToolButton}"
                                    Click="OpenTool_Click"
                                    Tag="dxdiag">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="MonitorScreenshot"
                                                                Width="20" Height="20"
                                                                Foreground="#808080"
                                                                VerticalAlignment="Center"/>
                                    <TextBlock Text="{x:Static local:Lang.DirectXDiagnostics}"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="2" Grid.Column="0"
                                    Style="{StaticResource ToolButton}"
                                    Click="OpenTool_Click"
                                    Tag="devmgmt.msc">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="Chip"
                                                                Width="20" Height="20"
                                                                Foreground="#808080"
                                                                VerticalAlignment="Center"/>
                                    <TextBlock Text="{x:Static local:Lang.DeviceManager}"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="2" Grid.Column="2"
                                    Style="{StaticResource ToolButton}"
                                    Click="OpenTool_Click"
                                    Tag="diskmgmt.msc">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="Harddisk"
                                                                Width="20" Height="20"
                                                                Foreground="#808080"
                                                                VerticalAlignment="Center"/>
                                    <TextBlock Text="{x:Static local:Lang.DiskManagement}"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="4" Grid.Column="0"
                                    Style="{StaticResource ToolButton}"
                                    Click="OpenTool_Click"
                                    Tag="eventvwr.msc">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="FormatListBulleted"
                                                                Width="20" Height="20"
                                                                Foreground="#808080"
                                                                VerticalAlignment="Center"/>
                                    <TextBlock Text="{x:Static local:Lang.EventViewer}"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="4" Grid.Column="2"
                                    Style="{StaticResource ToolButton}"
                                    Click="OpenTool_Click"
                                    Tag="regedit">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="DatabaseCog"
                                                                Width="20" Height="20"
                                                                Foreground="#808080"
                                                                VerticalAlignment="Center"/>
                                    <TextBlock Text="{x:Static local:Lang.RegistryEditor}"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="6" Grid.Column="0"
                                    Style="{StaticResource ToolButton}"
                                    Click="OpenTool_Click"
                                    Tag="control">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="TuneVertical"
                                                                Width="20" Height="20"
                                                                Foreground="#808080"
                                                                VerticalAlignment="Center"/>
                                    <TextBlock Text="{x:Static local:Lang.ControlPanel}"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Row="6" Grid.Column="2"
                                    Style="{StaticResource ToolButton}"
                                    Click="OpenTool_Click"
                                    Tag="ms-settings:">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="Cog"
                                                                Width="20" Height="20"
                                                                Foreground="#808080"
                                                                VerticalAlignment="Center"/>
                                    <TextBlock Text="{x:Static local:Lang.WindowsSettings}"
                                               Margin="12,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
