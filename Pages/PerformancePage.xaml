<Page x:Class="SysPilot.Pages.PerformancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="clr-namespace:SysPilot.Controls"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:local="clr-namespace:SysPilot"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="800"
      Background="Transparent"
      Title="{x:Static local:Lang.PerformanceTitle}">

    <Page.Resources>
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Focusable="False" ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="Border" Background="#252525" CornerRadius="4" Padding="8,4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Content="{Binding SelectionBoxItem, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                  ContentTemplate="{Binding SelectionBoxItemTemplate, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                  VerticalAlignment="Center"/>
                                                <iconPacks:PackIconMaterial Grid.Column="1" Kind="ChevronDown"
                                                                            Width="12" Height="12"
                                                                            Foreground="#808080"
                                                                            VerticalAlignment="Center" Margin="8,0,0,0"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#2A2A2A"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <Popup x:Name="PART_Popup" IsOpen="{TemplateBinding IsDropDownOpen}"
                                   Placement="Bottom" AllowsTransparency="True" StaysOpen="False">
                                <Border Background="#252525" CornerRadius="4" Margin="0,2,0,0"
                                        BorderBrush="#3A3A3A" BorderThickness="1">
                                    <ScrollViewer MaxHeight="200">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="DarkComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="0,0,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="{x:Static local:Lang.PerformanceTitle}"
                   Foreground="#E0E0E0"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Margin="0,0,0,8"/>

        <TextBlock Grid.Row="1"
                   Text="{x:Static local:Lang.RealTimeMonitoring}"
                   Foreground="#606060"
                   FontSize="13"
                   Margin="0,0,0,20"/>

        <!-- Graphs Grid -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- CPU -->
            <Border Grid.Row="0" Grid.Column="0" Background="#1E1E1E" CornerRadius="12" Padding="16" Margin="0,0,8,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <iconPacks:PackIconMaterial Kind="Chip" Width="18" Height="18" Foreground="#007ACC" VerticalAlignment="Center"/>
                        <TextBlock Text="{x:Static local:Lang.CPU}" Foreground="#E0E0E0" FontSize="14" FontWeight="SemiBold" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="CpuNameText" Text="" Foreground="#606060" FontSize="12" Margin="12,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <controls:PerformanceGraph x:Name="CpuGraph" Grid.Row="1" GraphColor="#007ACC"/>

                    <Grid Grid.Row="2" Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{x:Static local:Lang.Utilization}" Foreground="#606060" FontSize="11"/>
                            <TextBlock x:Name="CpuUtilText" Text="0%" Foreground="#E0E0E0" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{x:Static local:Lang.Cores}" Foreground="#606060" FontSize="11"/>
                            <TextBlock x:Name="CpuCoresText" Text="--" Foreground="#E0E0E0" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="{x:Static local:Lang.Logical}" Foreground="#606060" FontSize="11"/>
                            <TextBlock x:Name="CpuLogicalText" Text="--" Foreground="#E0E0E0" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="{x:Static local:Lang.Speed}" Foreground="#606060" FontSize="11"/>
                            <TextBlock x:Name="CpuSpeedText" Text="--" Foreground="#E0E0E0" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Grid.Column="4">
                            <TextBlock Text="{x:Static local:Lang.Processes}" Foreground="#606060" FontSize="11"/>
                            <TextBlock x:Name="CpuProcessesText" Text="0" Foreground="#E0E0E0" FontSize="13"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Memory -->
            <Border Grid.Row="0" Grid.Column="1" Background="#1E1E1E" CornerRadius="12" Padding="16" Margin="8,0,0,8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <iconPacks:PackIconMaterial Kind="Memory" Width="18" Height="18" Foreground="#9B59B6" VerticalAlignment="Center"/>
                        <TextBlock Text="{x:Static local:Lang.Memory}" Foreground="#E0E0E0" FontSize="14" FontWeight="SemiBold" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="RamTotalText" Text="" Foreground="#606060" FontSize="12" Margin="12,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <controls:PerformanceGraph x:Name="MemoryGraph" Grid.Row="1" GraphColor="#9B59B6"/>

                    <Grid Grid.Row="2" Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{x:Static local:Lang.InUse}" Foreground="#606060" FontSize="11"/>
                            <TextBlock x:Name="MemInUseText" Text="0 GB" Foreground="#E0E0E0" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{x:Static local:Lang.Available}" Foreground="#606060" FontSize="11"/>
                            <TextBlock x:Name="MemAvailText" Text="0 GB" Foreground="#E0E0E0" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="{x:Static local:Lang.Speed}" Foreground="#606060" FontSize="11"/>
                            <TextBlock x:Name="MemSpeedText" Text="--" Foreground="#E0E0E0" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="{x:Static local:Lang.Slots}" Foreground="#606060" FontSize="11"/>
                            <TextBlock x:Name="MemSlotsText" Text="--" Foreground="#E0E0E0" FontSize="13"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Disk -->
            <Border Grid.Row="1" Grid.Column="0" Background="#1E1E1E" CornerRadius="12" Padding="16" Margin="0,8,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Harddisk" Width="18" Height="18" Foreground="#27AE60" VerticalAlignment="Center"/>
                            <TextBlock Text="{x:Static local:Lang.Disk}" Foreground="#E0E0E0" FontSize="14" FontWeight="SemiBold" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                        <ComboBox x:Name="DiskSelector" Grid.Column="1"
                                  HorizontalAlignment="Right"
                                  Style="{StaticResource DarkComboBox}"
                                  ItemContainerStyle="{StaticResource DarkComboBoxItem}"
                                  SelectionChanged="DiskSelector_Changed">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" Foreground="#E0E0E0"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </Grid>

                    <controls:PerformanceGraph x:Name="DiskGraph" Grid.Row="1" GraphColor="#27AE60"/>

                    <Grid Grid.Row="2" Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{x:Static local:Lang.ActiveTime}" Foreground="#606060" FontSize="11"/>
                            <TextBlock x:Name="DiskActiveText" Text="0%" Foreground="#E0E0E0" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{x:Static local:Lang.Read}" Foreground="#606060" FontSize="11"/>
                            <TextBlock x:Name="DiskReadText" Text="0 MB/s" Foreground="#E0E0E0" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="{x:Static local:Lang.Write}" Foreground="#606060" FontSize="11"/>
                            <TextBlock x:Name="DiskWriteText" Text="0 MB/s" Foreground="#E0E0E0" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="{x:Static local:Lang.Capacity}" Foreground="#606060" FontSize="11"/>
                            <TextBlock x:Name="DiskCapacityText" Text="--" Foreground="#E0E0E0" FontSize="13"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>

            <!-- Network -->
            <Border Grid.Row="1" Grid.Column="1" Background="#1E1E1E" CornerRadius="12" Padding="16" Margin="8,8,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <iconPacks:PackIconMaterial Kind="Ethernet" Width="18" Height="18" Foreground="#E67E22" VerticalAlignment="Center"/>
                        <TextBlock Text="{x:Static local:Lang.Network}" Foreground="#E0E0E0" FontSize="14" FontWeight="SemiBold" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="NetworkNameText" Text="" Foreground="#606060" FontSize="12" Margin="12,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <controls:PerformanceGraph x:Name="NetworkGraph" Grid.Row="1" GraphColor="#E67E22" ValueFormat="{}{0:0} Kbps"/>

                    <Grid Grid.Row="2" Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{x:Static local:Lang.Send}" Foreground="#606060" FontSize="11"/>
                            <TextBlock x:Name="NetSendText" Text="0 Kbps" Foreground="#E0E0E0" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{x:Static local:Lang.Receive}" Foreground="#606060" FontSize="11"/>
                            <TextBlock x:Name="NetRecvText" Text="0 Kbps" Foreground="#E0E0E0" FontSize="13"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="{x:Static local:Lang.Adapter}" Foreground="#606060" FontSize="11"/>
                            <TextBlock x:Name="NetAdapterText" Text="--" Foreground="#E0E0E0" FontSize="13" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
