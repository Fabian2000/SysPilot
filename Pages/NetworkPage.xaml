<Page x:Class="SysPilot.Pages.NetworkPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:local="clr-namespace:SysPilot"
      mc:Ignorable="d"
      d:DesignHeight="500" d:DesignWidth="600"
      Background="Transparent"
      Title="{x:Static local:Lang.NetworkTitle}">

    <Page.Resources>
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A3A3A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TabButton" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#808080"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                                <Setter Property="Foreground" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="0,0,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="{x:Static local:Lang.NetworkTitle}"
                   Foreground="#E0E0E0"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Margin="0,0,0,20"/>

        <!-- Tab Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
            <RadioButton x:Name="AdaptersTab"
                         Style="{StaticResource TabButton}"
                         Content="{x:Static local:Lang.Adapters}"
                         IsChecked="True"
                         Checked="Tab_Checked"/>
            <RadioButton x:Name="ConnectionsTab"
                         Style="{StaticResource TabButton}"
                         Content="{x:Static local:Lang.Connections}"
                         Margin="8,0,0,0"
                         Checked="Tab_Checked"/>
        </StackPanel>

        <!-- Quick Info -->
        <Border Grid.Row="2" Background="#1E1E1E" CornerRadius="12" Padding="16" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{x:Static local:Lang.LocalIP}" Foreground="#606060" FontSize="11"/>
                    <TextBlock x:Name="LocalIpText" Foreground="#E0E0E0" FontSize="14" Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="{x:Static local:Lang.PublicIP}" Foreground="#606060" FontSize="11"/>
                    <TextBlock x:Name="PublicIpText" Text="Loading..." Foreground="#E0E0E0" FontSize="14" Margin="0,2,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="{x:Static local:Lang.ActiveConnections}" Foreground="#606060" FontSize="11"/>
                    <TextBlock x:Name="ConnectionCountText" Foreground="#E0E0E0" FontSize="14" Margin="0,2,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Adapters View -->
        <Border x:Name="AdaptersPanel" Grid.Row="3" Background="#1E1E1E" CornerRadius="12" SizeChanged="Border_SizeChanged">
            <DataGrid x:Name="AdaptersList"
                      AutoGenerateColumns="False"
                      Background="Transparent"
                      BorderThickness="0"
                      Foreground="#E0E0E0"
                      RowBackground="Transparent"
                      AlternatingRowBackground="#222222"
                      GridLinesVisibility="None"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeRows="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{x:Static local:Lang.Name}" Width="150" Binding="{Binding Name}" SortMemberPath="Name" CanUserSort="True"/>
                    <DataGridTextColumn Header="{x:Static local:Lang.Status}" Width="80" Binding="{Binding Status}" SortMemberPath="Status" CanUserSort="True"/>
                    <DataGridTextColumn Header="{x:Static local:Lang.Type}" Width="100" Binding="{Binding Type}" SortMemberPath="Type" CanUserSort="True"/>
                    <DataGridTextColumn Header="{x:Static local:Lang.Speed}" Width="80" Binding="{Binding Speed}" SortMemberPath="Speed" CanUserSort="True"/>
                    <DataGridTextColumn Header="{x:Static local:Lang.IPAddress}" Width="*" Binding="{Binding IpAddresses[0]}"/>
                </DataGrid.Columns>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#1E1E1E"/>
                        <Setter Property="Foreground" Value="#808080"/>
                        <Setter Property="Padding" Value="12,10"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#303030"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="{TemplateBinding Padding}">
                                        <Grid>
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                              VerticalAlignment="Center"/>
                                            <Thumb x:Name="PART_RightHeaderGripper"
                                                   HorizontalAlignment="Right" Width="2"
                                                   Cursor="SizeWE" Opacity="0"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                                <Setter Property="Foreground" Value="#E0E0E0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#252525"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Border>

        <!-- Connections View -->
        <Border x:Name="ConnectionsPanel" Grid.Row="3" Background="#1E1E1E" CornerRadius="12" SizeChanged="Border_SizeChanged" Visibility="Collapsed">
            <DataGrid x:Name="ConnectionsList"
                      AutoGenerateColumns="False"
                      Background="Transparent"
                      BorderThickness="0"
                      Foreground="#E0E0E0"
                      RowBackground="Transparent"
                      AlternatingRowBackground="#222222"
                      GridLinesVisibility="None"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      CanUserResizeRows="False"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{x:Static local:Lang.Process}" Width="120" Binding="{Binding ProcessName}" SortMemberPath="ProcessName" CanUserSort="True"/>
                    <DataGridTextColumn Header="{x:Static local:Lang.LocalAddress}" Width="130" Binding="{Binding LocalAddress}" SortMemberPath="LocalAddress" CanUserSort="True"/>
                    <DataGridTextColumn Header="{x:Static local:Lang.LocalPort}" Width="80" Binding="{Binding LocalPort}" SortMemberPath="LocalPort" CanUserSort="True"/>
                    <DataGridTextColumn Header="{x:Static local:Lang.RemoteAddress}" Width="130" Binding="{Binding RemoteAddress}" SortMemberPath="RemoteAddress" CanUserSort="True"/>
                    <DataGridTextColumn Header="{x:Static local:Lang.RemotePort}" Width="80" Binding="{Binding RemotePort}" SortMemberPath="RemotePort" CanUserSort="True"/>
                    <DataGridTextColumn Header="{x:Static local:Lang.State}" Width="*" Binding="{Binding State}" SortMemberPath="State" CanUserSort="True"/>
                </DataGrid.Columns>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#1E1E1E"/>
                        <Setter Property="Foreground" Value="#808080"/>
                        <Setter Property="Padding" Value="12,10"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="#303030"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            Padding="{TemplateBinding Padding}">
                                        <Grid>
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                              VerticalAlignment="Center"/>
                                            <Thumb x:Name="PART_RightHeaderGripper"
                                                   HorizontalAlignment="Right" Width="2"
                                                   Cursor="SizeWE" Opacity="0"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="8,6"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                                <Setter Property="Foreground" Value="#E0E0E0"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#252525"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Border>

        <!-- Actions -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,16,0,0">
            <Button Style="{StaticResource ActionButton}"
                    Click="Refresh_Click">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="Refresh" Width="14" Height="14" VerticalAlignment="Center"/>
                    <TextBlock Text="{x:Static local:Lang.Refresh}" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource ActionButton}"
                    Margin="8,0,0,0"
                    Click="FlushDns_Click">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="DatabaseRefresh" Width="14" Height="14" VerticalAlignment="Center"/>
                    <TextBlock Text="{x:Static local:Lang.FlushDNS}" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>
