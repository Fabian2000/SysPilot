<UserControl x:Class="SysPilot.Controls.PerformanceGraph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="120" d:DesignWidth="300"
             Background="Transparent">

    <Grid>
        <!-- Background with grid lines -->
        <Border Background="#0A0A0A" CornerRadius="4">
            <Canvas x:Name="GraphCanvas" ClipToBounds="True">
                <!-- Grid lines drawn in code -->
                <Polyline x:Name="GraphLine"
                          Stroke="#007ACC"
                          StrokeThickness="1.5"
                          StrokeLineJoin="Round"/>
                <Polygon x:Name="GraphFill"
                         Fill="#20007ACC"
                         StrokeThickness="0"/>
            </Canvas>
        </Border>

        <!-- Current value overlay -->
        <TextBlock x:Name="ValueText"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="0,8,12,0"
                   Foreground="#007ACC"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Text="0%"/>
    </Grid>
</UserControl>
